{
  "name": "my-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "firebase emulators:exec \"ng test\" --import=\"./src/test_data/emulator-data/\"",
    "test:ci": "firebase emulators:exec \"ng test --configuration=ci\"  --import=\"./src/test_data/emulator-data/\"",
    "test:firestore:rules": "firebase emulators:exec --only firestore \"jest --forceExit firebase_admin/firestore/rules.spec.ts\"",
    "test:storage:rules": "firebase emulators:exec --only storage \"jest --forceExit firebase_admin/cloud_storage/rules.spec.ts\"",
    "e2e": "firebase emulators:exec --only=auth \"ng e2e\" --import=\"./e2e/emulator-data/\"",
    "deploy:firebase:rules": "firebase deploy --only firestore:rules,storage",
    "dev:bootstrap": "npm --prefix firebase_admin/scripts run build && npm --prefix firebase_admin/scripts run bootstrap:emulator",
    "dev:startemu": "firebase emulators:exec \"npm run dev:bootstrap && npm start\" --import=\"./src/test_data/emulator-data/\"",
    "ci:functions": "npm --prefix functions ci",
    "install:functions": "npm --prefix functions install",
    "build:functions": "npm --prefix functions run build",
    "lint:functions": "npm --prefix functions run lint",
    "test:functions": "firebase emulators:exec \"npm --prefix functions test\"  --import=\"./e2e/emulator-data/\"",
    "deploy:functions": "firebase deploy --only functions"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.3",
    "@angular/common": "^18.0.3",
    "@angular/compiler": "^18.0.3",
    "@angular/core": "^18.0.3",
    "@angular/fire": "^18.0.1",
    "@angular/forms": "^18.0.3",
    "@angular/platform-browser": "^18.0.3",
    "@angular/platform-browser-dynamic": "^18.0.3",
    "@angular/router": "^18.0.3",
    "rxfire": "6.0.5",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.3",
    "zone.js": "~0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.4",
    "@angular/cli": "~18.0.4",
    "@angular/compiler-cli": "^18.0.3",
    "@babel/preset-typescript": "^7.24.7",
    "@firebase/rules-unit-testing": "^3.0.3",
    "@puppeteer/ng-schematics": "^0.6.0",
    "@types/jasmine": "~5.1.4",
    "jasmine": "5.1.0",
    "jasmine-core": "~5.1.2",
    "jest": "^29.7.0",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "puppeteer": "22.11.2",
    "ts-jest": "^29.2.4",
    "typescript": ">=5.4 and <5.6"
  }
}
